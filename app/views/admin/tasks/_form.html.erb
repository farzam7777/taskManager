<%= form_for [:admin, @task] do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title, :class => "field", autofocus: :true %> <br>

    <%= f.label :description %>
    <%= f.text_area :description, :class => "field text-area", size: "45x10" %><br>

    <%= f.submit "Create", :class => "field submit-btn" %>
  
 <% end %> 
